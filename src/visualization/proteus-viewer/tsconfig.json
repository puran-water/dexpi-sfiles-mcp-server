{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "noImplicitAny": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
